<%= form_for @image do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file, class: 'form-control'%>
  </div>
  <% if @image.file.present? %>
    <%= image_tag(@image.file.url, :alt => "image") %>
  <% end %>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>